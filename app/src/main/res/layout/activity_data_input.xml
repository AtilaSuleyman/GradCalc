<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.armanisuleyman.android.gradecalculator.DataInputActivity"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="8"
        android:columnCount="3"
        android:id="@+id/gridLayout">

        <TextView
            android:text="Percentage"
            android:padding="3dp"
            android:textSize="20dp"
            android:textColor="@color/headingColour"
            />

        <Space
            android:layout_width="30dp"/>

        <TextView
            android:text="Mark"
            android:textSize="20dp"
            android:textColor="@color/headingColour"
            />

        <EditText
            android:hint="@string/mark"
            android:id="@+id/mark1"
            />

        <Space/>

        <EditText
            android:hint="@string/percentSign"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/percent1"
            />

        <EditText
            android:hint="@string/mark"
            android:id="@+id/mark2"
            />

        <Space/>

        <EditText
            android:hint="@string/percentSign"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/percent2"
            />

        <EditText
            android:hint="@string/mark"
            android:id="@+id/mark3"
            />

        <Space/>

        <EditText
            android:hint="@string/percentSign"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/percent3"
            />
        <EditText
            android:hint="@string/mark"
            android:id="@+id/mark4"
            />

        <Space/>

        <EditText
            android:hint="@string/percentSign"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/percent4"
            />
        <EditText
            android:hint="@string/mark"
            android:id="@+id/mark5"
            />

        <Space/>

        <EditText
            android:hint="@string/percentSign"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/percent5"
            />
        <EditText
            android:hint="@string/mark"
            android:id="@+id/mark6"
            />

        <Space/>

        <EditText
            android:hint="@string/percentSign"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/percent6"
            />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridLayout"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginTop="20dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:hint="@string/generate"
            />

    </LinearLayout>



</RelativeLayout>
